{
  "name": "log-simple-server",
  "version": "1.0.0",
  "private": true,
  "main": "app.js",
  "type": "module",
  "scripts": {
    "install:production": "npm ci --omit=dev --ignore-scripts",
    "prestart": "prisma migrate deploy && prisma generate",
    "start": "node src/app",
    "dev": "nodemon src/app",
    "prettier": "prettier --write .",
    "lint": "eslint --fix .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^4.8.0",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.14.0",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "lint-staged": "^13.0.4",
    "nodemon": "^2.0.16",
    "prettier": "2.8.0",
    "prisma": "^4.11.0",
    "husky": "^8.0.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": "prettier --write"
  }
}
